{#
/**
 * @file
 * Two column template for the checkout form.
 *
 * Available variables:
 * - form: The form.
 *
 * @ingroup themeable
 */
#}


<div class="row justify-content-between">
  <div class="col-12 col-md-6 col-lg-5">
    {{ form|without('sidebar', 'actions') }}
  </div>
  <div class="col-12 12 col-md-6 col-lg-7 mt-4 mt-md-0">
    {{ form.sidebar }}
  </div>
</div>

<div class="row">
  <div class="col-12">
    {{ form.actions }}
  </div>
</div>

