{% set hackernews_url = 'u=' ~ url('<current>')['#markup']|url_encode %}
{% set hackernews_title = 't=' ~ node.getTitle|url_encode %}
{% set hackernews_text = 'text=' ~ node.field_mg_summary.value|url_encode %}

<li class="rrssb-hackernews">
  <a href="https://news.ycombinator.com/submitlink?{{ hackernews_url }}&{{ hackernews_title }}&{{ hackernews_text }}">
    <span class="rrssb-icon">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 28 28"><path d="M14 13.626l-4.508-9.19H6.588l6.165 12.208v6.92h2.51v-6.92l6.15-12.21H18.69z"/></svg>
    </span>
    <span class="rrssb-text">hackernews</span>
  </a>
</li>
